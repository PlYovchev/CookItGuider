<Page
    x:Class="CookItUniversal.Views.CreateRecipeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CookItUniversal.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="26" />
        </Style>
    </Page.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--TODO: Content should be placed within the following grid-->
        <Grid Grid.Row="1" x:Name="ContentRoot">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                <TextBlock 
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left" 
                        TextWrapping="Wrap" 
                        FontSize="36" 
                        Text="Create recipe" 
                        VerticalAlignment="Top" 
                        Margin="99,7,0,0"/>
                <TextBlock 
                        Grid.Column="0"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Text="Title: " />
                    <TextBox 
                        Grid.Column="1"
                        Grid.Row="1"
                        PlaceholderText="Enter the recipe title!"
                    />
                    <TextBlock 
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Type: " 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"/>
                    <ComboBox 
                        HorizontalAlignment="Stretch"
                        Grid.Column="1"
                        Grid.Row="2" />
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="3"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Text="Duration: "
                    />
                    <TextBox 
                        Grid.Column="1"
                        Grid.Row="3"
            	        PlaceholderText="Enter recipe making duration!"
            	        HorizontalAlignment="Left" 
            	        VerticalAlignment="Top"  />
                    <TextBlock 
                        Grid.Column="0"
                        Grid.Row="4"
                        VerticalAlignment="Center"
                        Text="Pick image: "/>
                    <StackPanel
                        Grid.Column="1"
                        Grid.Row="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <TextBlock 
                        Text="link"
                        VerticalAlignment="Center" Margin="0,14,0,15" Width="173"/>
                    <Button 
                	    Content="..."
                	    VerticalAlignment="Center" 
                	    HorizontalAlignment="Center"
                        MinWidth="50"
                        Margin="15,1,0,0.333"/>
                    </StackPanel>
                    <TextBlock 
                        Grid.Column="0"
                        Grid.Row="5"
                        VerticalAlignment="Center"
                        Text="Ingredients: "/>
                    <Button 
                        Grid.Column="1"
                        Grid.Row="5"
                        Content="Add ingredients!"
                        HorizontalAlignment="Center"
                    />
                    <TextBlock
                        Grid.Column="0"
                        Grid.Row="6"
                        Grid.RowSpan="3"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Text="Description: "
                    />
                    <TextBox 
                        Grid.Column="1"
                        Grid.Row="6"
                        Grid.RowSpan="3"
            	        PlaceholderText="Enter recipe description here"
            	        AcceptsReturn="True"
            	        HorizontalAlignment="Stretch" 
            	        VerticalAlignment="Stretch"  />
                </Grid>
                <Grid 
            Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button 
                        Grid.Column="0"
                        Content="Proceed"
                        HorizontalAlignment="Stretch"/>
                    <Button 
                        Grid.Column="1"
                        Content="Review"
                        HorizontalAlignment="Stretch"/>
                </Grid>
        </Grid>
    </Grid>
</Page>

